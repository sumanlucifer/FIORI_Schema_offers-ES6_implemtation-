<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog busyIndicatorDelay="0" class="sapUiContentPadding" id="ChangeStatus" title="{i18n>AddRemark}" >
        <content>
            <f:SimpleForm id="RemarkForm" layout="ResponsiveGridLayout" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label text="{i18n>Reason}"/>
                    <ComboBox id="reasonCombobox" change="onReasonForReamarkChange" required="true" items="{path:'/PortfolioRejectionReasonSet'}" selectedKey="{path:'oModelControl>/Dialog/ReasonKey',type:'.customInt'}">
                        <items>
                            <core:Item text="{Discription}" key="{Id}"/>
                        </items>
                    </ComboBox>
                    <Label text="{i18n>Remark}" />
                    <TextArea enabled="{path:'oModelControl>/Dialog/ReasonKey',formatter:'.formatter.fmtRemarksEnable'}" required="true" placeholder="{i18n>AddRemark}" maxLength="300" value="{path : 'oModelControl>/Dialog/Remarks', type : 'sap.ui.model.type.String', constraints : {minLength :1 , maxLength :300 } }"/>
                </f:content>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button text="{i18n>Close}" press="onDialogClose" />
            <Button press="onApproveReject" type="Emphasized" text="{i18n>Submit}" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>