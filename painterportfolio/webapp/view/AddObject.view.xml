<mvc:View height="100%" controllerName="com.knpl.pragati.painterportfolio.controller.AddObject" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">
    <f:DynamicPage busy="{oModelControl>/PageBusy}" busyIndicatorDelay="0"	stickySubheaderProvider="iconTabBar"
			class="sapUiNoContentPadding" showFooter="true" id="dynamicPageId" headerExpanded="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:breadcrumbs>
                    <Breadcrumbs currentLocationText="{i18n>AddPainterPortfolio}">
                        <Link text="{i18n>worklistViewTitle}" press="onNavToHome"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
                 <f:heading>
                    <Title text="{Painter/Name}"/>
                </f:heading>
                <f:expandedContent>
                    <Label text="{Painter/MembershipCard}"/>
                </f:expandedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <layout:HorizontalLayout allowWrapping="true">
                    <layout:VerticalLayout class="sapUiLargeMarginEnd">
                        <Avatar  fallbackIcon="sap-icon://picture" src="{parts:['Painter/__metadata'],formatter:'.formatter.generateImageUrl'}"  displaySize="L" displayShape="Circle"/>
                    </layout:VerticalLayout>
                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <ObjectStatus title="{i18n>ContactNumber}" text="{Painter/Mobile}"/>
                        <ObjectStatus title="{i18n>AgeGroup}" text="{path:'Painter/AgeGroup/AgeGroup',formatter:'.formatter.fmtAgeGrp'}"/>
                        <ObjectStatus title="{i18n>Category}" text="{path:'Painter/Slab/Slab'}"/>
                        <ObjectStatus title="{i18n>ActivationStatus}" text="{path:'Painter/ActivationStatus',formatter:'.formatter.fmtLowerCase' }"/>
                        
                    </layout:VerticalLayout>
                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <ObjectStatus title="{i18n>Address}" text="{parts:['Painter/PainterAddress/AddressLine1','Painter/PainterAddress/CityDetails/City','Painter/PainterAddress/StateDetails/State'], formatter:'.formatter.fmtAddress' }"/>
                        <ObjectStatus title="{i18n>TotalPoints}" text="{path:'Painter/TotalPoints' }"/>
                        <ObjectStatus title="{i18n>RedeemPoints}" text="{path:'Painter/RedeemPoints' }"/>
                        <ObjectStatus title="{i18n>BalancePoints}" text="{path:'Painter/RewardPoints' }"/>
                    </layout:VerticalLayout>
                     <layout:VerticalLayout class="sapUiLargeMarginEnd">
                        <layout:HorizontalLayout class="sapUiTinyMarginBottom">
                            <Label class="sapUiTinyMarginEnd" text="{i18n>PortfolioCode}:"/>
                            <Text text="{path:'PortfolioCode'}"/>
                        </layout:HorizontalLayout>
                    </layout:VerticalLayout>
                    <!-- <layout:VerticalLayout>
                        <layout:VerticalLayout class="sapUiTinyMarginBottom">
                            <Label class="sapUiTinyMarginEnd" text="{i18n>headerStatus}"/>
                            <ObjectStatus class="statusTextSizeLarge sapUiTinyMarginTop" text="{path:'OfferStatus',formatter:'.formatter.fmtOfferStatus'}" state="{path:'OfferStatus',formatter:'.formatter.fmtOfferStateColor'}" />
                        </layout:VerticalLayout>
                    </layout:VerticalLayout> -->
                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <layout:VerticalLayout width="100%" >
                <IconTabBar  select="onIcnTbarChange" items="{path:'oModelControl>/PortfolioCategory' }" selectedKey="{oModelControl>/IconTabKey}" expandable="false" expanded="true" id="iconTabBar" class="sapUiResponsiveContentPadding" >
                <items>
                    <IconTabFilter  text="{oModelControl>category} ({oModelControl>TotalImages}/{oModelControl>MaxImages})" key="{oModelControl>Id}" >
                      
                    </IconTabFilter>
                </items>
            </IconTabBar>
          
                   <core:Fragment fragmentName="com.knpl.pragati.painterportfolio.view.fragments.TableCategoryImages" type="XML"/>
    
            
            </layout:VerticalLayout>
           
        </f:content>
        <f:footer>
            <OverflowToolbar>
              <ToolbarSpacer/>
              <Button press="onNavToHome" type="Ghost"  text="{i18n>Cancel}"  />
              <Button press="onDownloadProtfolio" type="Emphasized" text="{i18n>ViewPdf}" visible="{= ${DownloadApplicable} === true }" />
             
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>