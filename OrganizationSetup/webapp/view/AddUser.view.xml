<mvc:View controllerName="com.knpl.pragati.OrganizationSetup.controller.User" class="sapUiSizeCompact" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
xmlns:l="sap.ui.layout"
xmlns:core="sap.ui.core"
xmlns:f="sap.ui.layout.form">
<Page id="addUser"
 floatingFooter="true"
 showNavButton="true"
 navButtonPress="onNavToHome"
 title="Add User">
        <VBox class="sapUiSmallMargin">
		<f:SimpleForm id="addUserForm"
			editable="true"
			layout="ColumnLayout"
			title="User Details"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			>
			<f:content>
				<Label text="Name" labelFor="name" design="Bold" required="true"/>
		<Input id="name" 
        liveChange="onLiveChangeInputValidate"
        	                type="Text"
                            value="{ 
                                  path : '/name', 
                                  type : 'sap.ui.model.type.String', 
                                  constraints : { 
                                      minLength : 1,
                                      maxLength :25
                                      
                                  }
                              }"
                        placeholder="Enter Name ..."
        				valueStateText="Enter a valid Name. Maximum 25 characters." 
                        
                        />

				<Label text="Email" labelFor="email" design="Bold" required="true" />
		<Input id="email" 
        	                type="Text"
                            value="{ 
                                  path : '/email', 
                                  type : 'sap.ui.model.type.String', 
                                  constraints : { search : '^[\\w-]+(?:\\.[\\w-]+)*@(?:[\\w-]+\\.)+[a-zA-Z]{2,7}$' }
                              }"
        				placeholder="Enter Email ..."
        				valueStateText="Email must not be empty."/>

        

				<Label text="Mobile" labelFor="mobile" design="Bold" required="true" />
		<Input id="mobile" 
        	                type="Number"
                            
                            value="{ 
                                  path : '/mobile', 
                                  type : 'sap.ui.model.type.String', 
                                   constraints : { 
                                      minLength : 10,
                                      maxLength : 10
                                      
                                      
                                      
                                  }
                                  }"
        				placeholder="Enter Mobile Number ..."
        				valueStateText="Mobile Number must not be empty or Enter a valid Mobile Number" />

         <Label text="Country Code" labelFor="countrycode" design="Bold" required="true" />
		<Input id="countrycode" 
        	                type="Text"
                            editable="false"
                            value="{ 
                                  path : '/countrycode', 
                                  type : 'sap.ui.model.type.String', 
                                  constraints : { 
                                      minLength : 1
                                      
                                  }
                              }"
        				placeholder="Enter Country Code ..."
        				valueStateText="CountryCode must not be empty."/>
            
            <Label text="Role" labelFor="role" design="Bold" required="true"/>
        	<Select
            id="role"
            forceSelection="false"
            valueStateText="Role must not be empty."
            change="onRoleChange"
			items="{path: 'data>/MasterAdminRoleSet',
                filters: {path: 'IsArchived', operator: 'EQ', value1: false}}">
				<core:Item key="{data>Id}" text="{data>Description}" />
			</Select>
            <Label text="User Type" labelFor="UserType" design="Bold" />
            <Select
            id="iduserType"
            forceSelection="false"
            valueStateText="UserType must not be empty."
			items="{path: 'data>/MasterUserTypeSet'}">
				<core:Item key="{data>Id}" text="{data>Description}" />
			</Select>
                <Label text="{i18n>IsBankUpdateApplicable}" labelFor="rb1" design="Bold" required="false" />
                  
                   <RadioButtonGroup id="rb1"  columns="2" >
                    <RadioButton text="{i18n>No}"/>
                      <RadioButton text="{i18n>Yes}"/>
                </RadioButtonGroup>
                	<Label text="{i18n>IsKycUpdateApplicable}" labelFor="rb2" design="Bold" required="false" />
                   <RadioButtonGroup id="rb2" columns="2" >
                    <RadioButton text="{i18n>No}"/>
                      <RadioButton text="{i18n>Yes}"/>
                </RadioButtonGroup>
                	<Label text="{i18n>Zone}" labelFor="zone" design="Bold" required="false" />
                       <MultiComboBox selectionChange="onChangeZone" required="false" id="zone" selectedKeys="{path:'oModelControl>/MultiCombo/Zone' }"  placeholder="{i18n>placeHolder1}" items="{path:'data>/MasterZoneSet' }">
                            <core:Item text="{data>Id}" key="{data>Id}"/>
                     </MultiComboBox>
                     <Label text="{i18n>Division}" labelFor="division" design="Bold" required="false" />
                       <MultiComboBox editable="{= ${oModelControl>/MultiCombo/Zone}.length > 0 }" required="false" id="division" selectedKeys="{path:'oModelControl>/MultiCombo/Division' }"  placeholder="{i18n>placeHolder1}" items="{path:'data>/MasterDivisionSet' }">
                            <core:Item text="{data>Id}" key="{data>Id}"/>
                     </MultiComboBox>

			</f:content>
		</f:SimpleForm>
	</VBox>
	
    <footer>
			<OverflowToolbar>
            
				<ToolbarSpacer/>
                
                <Button text="Cancel"    type="Ghost" press="onCancelPressForAdd"></Button>
				<Button text="Save"
                type="Emphasized"
				press="add"
				ariaDescribedBy="defaultButtonDescription genericButtonDescription"></Button>
                  
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
