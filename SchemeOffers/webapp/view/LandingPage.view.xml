<mvc:View controllerName="com.knpl.pragati.SchemeOffers.controller.LandingPage" height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:vm="sap.ui.comp.variants">
    <f:DynamicPage headerExpanded="true" stickySubheaderProvider="idIconTabBar" class="sapUiContentPadding">
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbar" showRestoreOnFB="true" reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="true">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Search" label="{i18n>searchFilterLabel}" visibleInFilterBar="true">
                                <fb:control>
                                    <SearchField id="idSearchInput" value="{oModelControl>/filterBar/Name}" search="onSearch" placeholder="{i18n>searchFilterPlaceholder}" />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Offer Type" label="{i18n>offerTypeFilterLabel}" visibleInFilterBar="true">
                                <fb:control>
                                    <ComboBox placeholder="{i18n>placeHolder1}" items="{path:'/MasterOfferTypeSet',filters:[{path:'IsArchived',operator:'EQ',value1:false}] }" selectedKey="{path:'oModelControl>/filterBar/OfferType' }">
                                        <core:Item text="{OfferType}" key="{Id}" />
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Date" label="{i18n>tblColStartDate}" visibleInFilterBar="true">
                                <fb:control>
                                    <DatePicker placeholder="DD/MM/YYYY" value="{path:'oModelControl>/filterBar/StartDate', type:'sap.ui.model.type.Date', formatOptions: {pattern:'dd/MM/yyyy', UTC:false } }" displayFormat="dd/MM/yyyy"></DatePicker>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="EndDate" label="{i18n>formBasicInfoLbl4}" visibleInFilterBar="true">
                                <fb:control>
                                    <DatePicker placeholder="DD/MM/YYYY" value="{path:'oModelControl>/filterBar/EndDate', type:'sap.ui.model.type.Date', formatOptions: {pattern:'dd/MM/yyyy', UTC:false } }" displayFormat="dd/MM/yyyy"></DatePicker>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Status" label="{i18n>tblColStatus}" visibleInFilterBar="true">
                                <fb:control>
                                    <ComboBox placeholder="{i18n>placeHolder1}" selectedKey="{oModelControl>/filterBar/Status}">
                                        <core:Item text="Draft" key="DRAFT"/>
                                        <core:Item text="Pending" key="PENDING"/>
                                        <core:Item text="Approved" key="APPROVED"/>
                                        <core:Item text="Published" key="PUBLISHED"/>
                                        <core:Item text="Offer Ended" key="EXPIRED"/>
                                        <core:Item text="Rejected" key="REJECTED"/>
                                    </ComboBox>

                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem visibleInFilterBar="true" groupName="A" name="TrainingZone" groupTitle="Filters" label="{i18n>formRegionLbl1}">
                                <fb:control>
                                    <ComboBox id="idZone" placeholder="{i18n>placeHolder1}" items="{ path: '/MasterZoneSet' }" selectionChange="onZoneChange" selectedKey="{oModelControl>/filterBar/Zone}">
                                        <core:Item enabled="{parts:['Id','LoginInfo>/UserTypeId','LoginInfo>/AdminZone'],formatter:'.formatter.fmtLeadZoneCheck'}" key="{Id}" text="{Id}"/>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem visibleInFilterBar="true" groupName="A" name="TrainingDivision" groupTitle="Filters" label="{i18n>formRegionLbl2}">
                                <fb:control>
                                    <ComboBox enabled="{= ${oModelControl>/filterBar/Zone}.length>1}" id="idDivision" selectionChange="onDivisionChange" placeholder="{i18n>placeHolder1}" items="{ path: '/MasterDivisionSet' }" selectedKey="{oModelControl>/filterBar/Division}">
                                        <core:Item enabled="{parts:['Id','LoginInfo>/UserTypeId','LoginInfo>/AdminDivision'],formatter:'.formatter.fmtLeadDivisionCheck'}" key="{Id}" text="{Id}"/>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem visibleInFilterBar="true" groupName="A" name="TrainingDepot" groupTitle="Filters" label="{i18n>formRegionLbl3}">
                                <fb:control>
                                    <ComboBox enabled="{= ${oModelControl>/filterBar/Division}.length>1}" id="idDepot" placeholder="{i18n>placeHolder1}" items="{ path: '/MasterDepotSet' }" selectedKey="{oModelControl>/filterBar/Depot}">
                                        <core:Item key="{Id}" text="{Depot} ( {Id} )"/>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                               <fb:FilterGroupItem visibleInFilterBar="true" groupName="A" name="Product" groupTitle="Filters" label="{i18n>formLabelProduct}">
                                <fb:control>
                                    <Input value="{path:'oModelControl>/filterBar/ProdCode',formatter:'.formatter.fmtListProductName'}" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="oProdValueHelpRequest"/>
                                </fb:control>
                            </fb:FilterGroupItem>

                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <!-- DynamicPage Content -->
        <f:content>
            <Table id="idOffersTable" width="auto" items="{path: '/OfferSet',sorter:{path:'CreatedAt',descending:true}, filters:[{path:'IsArchived',operator:'EQ',value1:false}] , parameters:{expand:'OfferType,CreatedByDetails,OfferZone,OfferDivision,OfferDepot',select:'Id,Title,OfferType/OfferType,CreatedByDetails/Name,StartDate,EndDate,IsActive,OfferStatus,IsUpdateApplicable,OfferCode,OfferZone,OfferDivision,OfferDepot' }}" noDataText="{i18n>tableNoDataText}" growing="true" growingScrollToLoad="false" growingThreshold="10" updateFinished="onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{worklistView>/TableTitle}" />
                        <ToolbarSpacer />
                        <Button icon="sap-icon://add" visible="{parts:['LoginInfo>/UserTypeId'],formatter:'.formatter.btnAddOffer'}" text="{i18n>addToolBtnText}" tooltip="{i18n>addToolBtnTooltip}" type="Emphasized" press="onPressAdd"/>
                        <Button tooltip="{i18n>sortBtnTooltip}" icon="sap-icon://sort" press="handleSortButtonPressed" />
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="{i18n>tblColOfferName}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>OfferCode}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>offerTypeFilterLabel}"/>
                    </Column>

                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>tblColStartDate}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>tblColEndDate}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>tblColCreatedBy}"/>
                    </Column>
                    <Column width="10%">
                        <Text text="{i18n>colZone}"/>
                    </Column>
                     <Column width="10%" >
                        <Text text="{i18n>colDivision}"/>
                    </Column>
                     <Column width="10%">
                        <Text text="{i18n>colDepot}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>tolColActiveStatus}"/>
                    </Column>
                    <Column width="8%" hAlign="Center">
                        <Text text="{i18n>tblColAction}"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Navigation" press="onPressListItem">
                        <cells>
                            <ObjectIdentifier tooltip="{Title}" title="{Title}" titleActive="true"/>
                            <Text text="{OfferCode}"/>
                            <Text text="{OfferType/OfferType}"/>
                            <Text text="{path:'StartDate',type :'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/yyyy'} }"/>
                            <Text text="{path:'EndDate',type :'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/yyyy',UTC:false,strictParsing:true} }"/>
                            <Text text="{CreatedByDetails/Name}"/>
                            <Text text="{path:'OfferZone',formatter:'.formatter.fmtListZone'}" wrapping="true" maxLines="2" tooltip="{path:'OfferZone',formatter:'.formatter.fmtListZone'}"/>
                             <Text text="{path:'OfferDivision',formatter:'.formatter.fmtListDivision'}" wrapping="true" maxLines="2" tooltip="{path:'OfferDivision',formatter:'.formatter.fmtListDivision'}" />
                              <Text text="{path:'OfferDepot',formatter:'.formatter.fmtListDepot'}"  wrapping="true" maxLines="2" tooltip="{path:'OfferDepot',formatter:'.formatter.fmtListDepot'}"  />
                            <ObjectStatus text="{path:'OfferStatus',formatter:'.formatter.fmtOfferStatus'}" state="{path:'OfferStatus',formatter:'.formatter.fmtOfferStateColor'}" />
                            <HBox justifyContent="Center">
                                <Button visible="{parts:['IsUpdateApplicable','LoginInfo>/UserTypeId','OfferStatus'],formatter:'.formatter.btnEditOfferTable'}" tooltip="{i18n>Edit}" icon="sap-icon://edit" type="Transparent" press="onEditOffer"></Button>
                               
                            </HBox>

                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
