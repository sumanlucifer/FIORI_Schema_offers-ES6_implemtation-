<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">
   <Table id="idPainterTable" growing="true" growingThreshold="15" width="auto" noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false" busyIndicatorDelay="{oModelView>/tableBusyDelay}">
        <headerToolbar>
            <Toolbar >
                <ToolbarSpacer />
                <Button type="Emphasized" icon="sap-icon://download" text="{i18n>Download}" press="onPainterListDownload" />

            </Toolbar>
        </headerToolbar>

        <columns>

            <Column>
                <Text text="{i18n>PainterName}" />
            </Column>
            <Column>
                <Text text="{i18n>Mobile}" />
            </Column>
            <Column width="5%">
                <Text text="{i18n>formRegionLbl1}" />
            </Column>
            <Column width="5%">
                <Text text="{i18n>formRegionLbl2}" />
            </Column>
            <Column width="10%">
                <Text text="{i18n>formRegionLbl3}" />
            </Column>
            <Column>
                <Text text="{i18n>Dealer}" />
            </Column>
            <Column>
                <Text text="{i18n>Achievement}" />
            </Column>
            <Column>
                <Text text="{i18n>SchemeSlab}" />
            </Column>
            
            <Column>
                <Text text="{i18n>BalanceQty}" />
            </Column>
            <Column width="8%">
                <Text text="{i18n>MUltiplesAllowed}" />
            </Column>
            <Column>
                <Text text="{i18n>EligibleForRwards}" />
            </Column>
            <Column>
                <Text text="{i18n>RedeemedRewards}" />
            </Column>
            <Column>
                <Text text="{i18n>BonusPoints}" visible="{= ${OfferTypeId}===3 || ${OfferTypeId}===4 }"/>
            </Column>
            <Column>
                <Text text="{i18n>Remark}" />
            </Column>

        </columns>
        <dependents>
             <ColumnListItem id="idPainterTableTemplate">
                <cells>
                    <Text text="{Name}" />
                    <Text text="{Mobile}" />
                    <Text text="{ZoneId}" />
                    <Text text="{DivisionId}" />
                    <Text text="{Depot}"/>
                    <Text text="{DealerName}"/>
                    <Text text="{ProgressValue}"/>
                    <Text text="{ProgressMax}"/>
                    <Text text="{= ${MaxSlabValue} - ${ProgressValue} }"/>
                    <Text text="{RedemeptionIndex} / {RedemptionMax}"/>
                    <Text text="{parts:['RedemptionStatus','RedemptionAllowed'],formatter:'.formatter.chkEligibleForGift'}"/>
                    <Text text="{parts:['RedemptionStatus','RedemptionType','RedeemedRewardPoints','RedeemedRewardCash','RewardGift'],formatter:'.formatter.checkPainterReward'}"/>
                    <Text text="{RedeemedRewardBonusPoints}" visible="{= ${OfferTypeId}===3 || ${OfferTypeId}===4 }" />
                     <Text text="{Remark}"/>

                </cells>
            </ColumnListItem>
        </dependents>

    </Table>

</core:FragmentDefinition>
