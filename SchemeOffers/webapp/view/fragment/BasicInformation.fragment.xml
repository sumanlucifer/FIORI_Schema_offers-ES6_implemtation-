                    <f:FormElement label="{i18n>ApplyParentOffer}">
                        <f:fields>
                            <RadioButtonGroup select="onRbPrntOffer" columns="2" selectedIndex="{oModelControl>/Rbtn/ParentOffer}">
                                <buttons>
                                    <RadioButton text="{i18n>No}"/>
                                    <RadioButton text="{i18n>Yes}" />
                                </buttons>
                            </RadioButtonGroup>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="{i18n>SelectParentOffer}" visible="{= ${oModelControl>/Rbtn/ParentOffer}=== 1 }">

                        <f:fields>
                            <Input valueHelpOnly="true" showValueHelp="true" valueHelpRequest="onValueHelpParentOffer" value="{path:'oModelControl>/Fields/ParentOfferTitle'}" />

                        </f:fields>
                    </f:FormElement>


                </f:formElements>
            </f:FormContainer> -->

        </f:formContainers>
    </f:Form>

</core:FragmentDefinition>