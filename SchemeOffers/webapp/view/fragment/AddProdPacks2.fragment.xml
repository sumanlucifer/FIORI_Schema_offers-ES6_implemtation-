<core:FragmentDefinition   xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m" xmlns:m="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog beforeOpen="onRewardBeforeOpen" afterClose="onValueHelpAfterClose" showHeader="false" contentWidth="500px">
		<customHeader>
			<Bar >
				<contentMiddle>
					<Title text="{i18n>formBonusRewardRatio}" />
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<f:Form id="FormAddProdPacks2"   editable="false" >
				<f:layout>
					<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
						emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
				</f:layout>
			
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement visible="{= ${oModelControl>/Rbtn/BRewards}===1 }">
								<f:label>
									<Label required="true" text="{= ${oModelControl>/Rbtn/AppPacks4} === 0 ? 'Products' : 'Packs' }"/>
								</f:label>
								<f:fields>
                                    
									<ComboBox selectedKey="{oModelControl>/Dialog/Bonus2/ProductCode}" visible="{= ${oModelControl>/Rbtn/AppPacks4} === 0 }" items="{oModelControl>/MultiCombo/Reward2}" >
                                        <core:Item text="{oModelControl>Name}" key="{oModelControl>Id}"/>
                                    </ComboBox>
                                    <ComboBox selectedKey="{oModelControl>/Dialog/Bonus2/SkuCode}" visible="{= ${oModelControl>/Rbtn/AppPacks4} === 1 }" items="{oModelControl>/MultiCombo/Reward2}" >
                                        <core:Item text="{oModelControl>Name}" key="{oModelControl>Id}"/>
                                    </ComboBox>
                                 
								</f:fields>
							</f:FormElement>
							<f:FormElement>
                            <f:label>
                                <Label text="{i18n>formBonusValidaityFrom}" required="true"/>
                            </f:label>
								<f:fields>
										<DatePicker change=".onStartDateBRRChange"  displayFormat="dd/MM/yyyy" placeholder="DD/MM/yyyy" width="100%" dateValue="{oModelControl>/Dialog/Bonus2/StartDate}" />
								</f:fields>
							</f:FormElement>
                            <f:FormElement>
                            <f:label>
                                <Label text="{i18n>formBonusValidaityTo}" required="true"/>
                            </f:label>
								<f:fields>
									 <DatePicker  change=".onEndDateBRRChange"   displayFormat="dd/MM/yyyy" placeholder="DD/MM/yyyy" width="100%" dateValue="{oModelControl>/Dialog/Bonus2/EndDate}" />
								</f:fields>
							</f:FormElement>
                            <f:FormElement label="{i18n>Table3Label1}">
								<f:fields>
										<Input  required="true" type="Number" placeholder="{i18n>placeHolder3}" width="100%" value="{path:'oModelControl>/Dialog/Bonus2/BonusPoints',type:'sap.ui.model.type.String',constraints:{search:'^[0-9]+$',minLength:1,maxLength:6} }" />
								</f:fields>
							</f:FormElement>
							
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
		<buttons>
			<Button text="Cancel" type="Ghost" press="onValueHelpClose" />
            <Button visible="{= ${oModelControl>/Rbtn/BRewards}===1 }" type="Emphasized" text="Save" app:mode="{oModelControl>/Dialog1/Key}" press="onSubmitRewards2"/>
             <Button visible="{= ${oModelControl>/Rbtn/BRewards}===0 }" type="Emphasized" text="Save" app:mode="{oModelControl>/Dialog1/Key}" press="onSubmitGenericRewards2"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>
