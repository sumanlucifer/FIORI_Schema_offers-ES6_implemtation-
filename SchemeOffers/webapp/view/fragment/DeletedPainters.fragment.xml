<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:smartTable="sap.ui.comp.smarttable">
   
    <VBox class="sapUiMediumMargin">
                <Table id="idDelPainterTable" width="auto" noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false" busyIndicatorDelay="{oModelView>/tableBusyDelay}" growing="true" growingThreshold="15">
                            <headerToolbar>
                                <Toolbar visible="{=${oModelControl3>/mode} === 'display'}">
                                    <ToolbarSpacer/> 
                                          
                                                <u:FileUploader style="Emphasized" id="idOfferFileUploader2" visible="{oModelDisplay>/IsPublished}" iconFirst="true" icon="sap-icon://upload" sameFilenameAllowed="false" uploadComplete="onUploadComplete" change="onUploadDelPainter" buttonOnly="true" placeholder="{i18n>formApplicableLbl17}" buttonText="{i18n>formApplicableLbl17}" typeMissmatch="onUploadMisMatch1" fileType="text,csv" />
                                    
                                </Toolbar>
                            </headerToolbar>

                            <columns>
                                <Column>
                                    <Text text="{i18n>colPainterName}"/>
                                </Column>
                                <Column>
                                    <Text text="{i18n>colMembershipId}"/>
                                </Column>
                                <Column>
                                    <Text text="{i18n>colMobileNumber}"/>
                                </Column>
                                <Column>
                                    <Text text="{i18n>colZone}"/>
                                </Column>
                                <Column>
                                    <Text text="{i18n>colDivision}"/>
                                </Column>
                                <Column>
                                    <Text text="{i18n>colDepot}"/>
                                </Column>
                            
                                <Column>
                                    <Text text="{i18n>tblColAction}"/>
                                </Column> 
                            </columns>

                            <dependents>
                                <ColumnListItem id="tblDeSelPainterDepnd" press="onListItemPress">
                                    <cells>
                                        <Text text="{Painter/Name}"/>
                                        <Text text="{Painter/MembershipCard}"/>
                                        <Text text="{Painter/Mobile}"/>
                                        <Text text="{Painter/ZoneId}"/>
                                        <Text text="{Painter/DivisionId}"/>
                                        <Text text="{Painter/DepotId}"/>
                                        <Button tooltip="{i18n>Delete}" icon="sap-icon://delete" type="Transparent" press="onRemovePainter"></Button>
                                        <!-- <Text text="{Painter/PrimaryDealerDetails/DealerName}"/>
                                        <Text text="{path:'AttendedAt',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/yyyy'}}"/>
                                        <Text text="{EarnedPoints}"/> -->
                                    </cells>
                                </ColumnListItem>
                            </dependents>
                </Table>
    </VBox>
</core:FragmentDefinition>