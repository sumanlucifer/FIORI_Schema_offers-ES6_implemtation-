<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
    <Dialog title="{i18n>TitleUploadedMsg1}" contentHeight="500px" contentWidth="600px">
        <VBox width="100%">
            <f:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="2" singleContainerFullSize="false">
                <Table width="auto" items="{ path: 'oModelControl>/ofragmentProModel'}" growingScrollToLoad="false" growing="true" growingThreshold="15">
                    <columns>
                        <Column width="10%">
                            <Text text="{i18n>Row}" />
                        </Column>
                        <Column width="20%">
                            <Text text="{i18n>Name}" />
                        </Column>
                        <Column width="20%">
                            <Text text="{i18n>Mobile}" />
                        </Column>
                        <Column width="37%">
                            <Text text="{i18n>Message}" />
                        </Column>
                        <Column width="13%">
                            <Text text="{i18n>Status}" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{oModelControl>rowNo}" />
                                <Text text="{oModelControl>productName}" />
                                <Text text="{oModelControl>mobileNumber}" />
                                <Text text="{oModelControl>errorMessage}" />
                                <HBox>
                                    <ObjectStatus text="{i18n>Success}" visible="{= ${oModelControl>uploadStatus} === true}" state="{= ${oModelControl>uploadStatus} === false ? 'Error' : 'Success' }" />
                                    <ObjectStatus text="{i18n>Failure}" visible="{= ${oModelControl>uploadStatus} === false}" state="{= ${oModelControl>uploadStatus} === false ? 'Error' : 'Success' }" />
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </f:SimpleForm>
        </VBox>
        <buttons>
            <Button type="Ghost" text="{i18n>btnClose}" press="onSaveUploadProduct" />
            <Button type="Ghost" text="{i18n>btnDownloadCSV}" icon="sap-icon://download" press="onDataExportProduct" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
