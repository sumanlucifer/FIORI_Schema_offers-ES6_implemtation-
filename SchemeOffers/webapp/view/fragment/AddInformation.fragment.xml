                            <!-- <Input visible="{= ${oModelControl>editable} === true }" type="Number" placeholder="{i18n>placeHolder3}" width="100%" value="{path:'oModelControl>AchieverCount'}" /> -->
                        <Input visible="{= ${oModelControl>editable} === true }" type="Number" placeholder="{i18n>placeHolder3}" width="100%" value="{path:'oModelControl>AchieverCount'}" /> 
                        </VBox>
                        <HBox>
                            <Button  visible="{= ${oModelControl>editable} !== true }" icon="sap-icon://edit" tooltip="{i18n>Edit}" type="Transparent" press="onPressAddInformation"></Button>
                            <Button  visible="{= ${oModelControl>editable} === true }" text="{i18n>Save}" tooltip="{i18n>Save}" type="Transparent" press="onPressSaveAddInfo"></Button>
                            <Button  icon="sap-icon://delete" type="Transparent" tooltip="{i18n>Delete}" press="onRemovedAddInfo"></Button>
                        </HBox>
                    </cells>
                </ColumnListItem>
            </items>
