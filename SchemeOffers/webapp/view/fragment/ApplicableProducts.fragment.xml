<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <f:Form editable="true">
        <f:layout>
            <f:ResponsiveGridLayout labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="3" singleContainerFullSize="false" />
        </f:layout>

        <f:formContainers>
            <f:FormContainer visible="{oModelControl>/ApplicableProductsVisible}" title="{i18n>ApplicableProducts}">
                <f:FormElement label="{i18n>formApplicableLbl7}">
                    <f:fields>
                        <RadioButtonGroup columns="2" select="onRbChnageMain" selectedIndex="{oModelControl>/Rbtn/PCat1}">
                            <buttons>
                                <RadioButton text="{i18n>All}" />
                                <RadioButton text="{i18n>Specific}" />
                            </buttons>
                        </RadioButtonGroup>
                    </f:fields>
                </f:FormElement>
                <f:FormElement label="">
                    <f:fields>
                        <MultiComboBox
                            required="false"
                            id="PCat1"
                            visible="{oModelControl>/MultiEnabled/PCat1}"
                            selectedKeys="{path:'oModelControl>/MultiCombo/PCat1' }"
                            selectionFinish="onPAppDropChange"
                            placeholder="{i18n>placeHolder1}"
                            items="{path:'/MasterProductCategorySet',sorter:{path:'Category'} }"
                        >
                            <core:Item text="{Category}" key="{Id}" />
                        </MultiComboBox>
                    </f:fields>
                </f:FormElement>
                <f:FormElement label="{i18n>formApplicableLbl8}">
                    <f:fields>
                        <RadioButtonGroup columns="2" select="onRbChnageMain" selectedIndex="{oModelControl>/Rbtn/PClass1}">
                            <buttons>
                                <RadioButton text="{i18n>All}" />
                                <RadioButton text="{i18n>Specific}" />
                            </buttons>
                        </RadioButtonGroup>
                    </f:fields>
                </f:FormElement>
                <f:FormElement label="">
                    <f:fields>
                        <MultiComboBox
                            selectionFinish="onPAppDropChange"
                            visible="{oModelControl>/MultiEnabled/PClass1}"
                            id="PClass1"
                            selectedKeys="{path:'oModelControl>/MultiCombo/PClass1'}"
                            placeholder="{i18n>placeHolder1}"
                            items="{path:'/MasterProductClassificationSet',sorter:{path:'Classification'} }"
                        >
                            <core:Item text="{Classification}" key="{Id}" />
                        </MultiComboBox>
                    </f:fields>
                </f:FormElement>
            </f:FormContainer>

            <f:FormContainer visible="{oModelControl>/ApplicableProductsVisible}" title="   ">
                <f:FormElement label="{i18n>formApplicableProducts2}">
                    <f:fields>
                        <RadioButtonGroup columns="2" select="onRbChnageMain" selectedIndex="{oModelControl>/Rbtn/AppProd1}">
                            <buttons>
                                <RadioButton text="{i18n>All}" />
                                <RadioButton text="{i18n>Specific}" />
                            </buttons>
                        </RadioButtonGroup>
                    </f:fields>
                </f:FormElement>
                <f:FormElement label="">
                    <f:fields>
                        <MultiInput placeholder="{i18n>placeHolder1}" tokenUpdate="onProdTokenUpdate" visible="{= ${oModelControl>/Rbtn/AppProd1}===1}" valueHelpOnly="true" id="AppProd1" valueHelpRequest="handleProdValueHelp" tokens="{path:'oModelControl>/MultiCombo/AppProd1'}">
                            <tokens>
                                <Token text="{oModelControl>Name}" key="{oModelControl>Id}" />
                            </tokens>
                        </MultiInput>
                    </f:fields>
                </f:FormElement>
                <f:FormElement label="{i18n>formApplicableLbl9}">
                    <f:fields>
                        <RadioButtonGroup columns="2" select="onRbChnageMain" selectedIndex="{oModelControl>/Rbtn/AppPacks1}">
                            <buttons>
                                <RadioButton text="{i18n>All}" />
                                <RadioButton text="{i18n>Specific}" />
                            </buttons>
                        </RadioButtonGroup>
                    </f:fields>
                </f:FormElement>
                <f:FormElement label="">
                    <f:fields>
                        <MultiInput
                            valueState="{oModelControl>/AppPacksValueState}"
                            valueStateText="{oModelControl>/AppPacksValueStateText}"
                            placeholder="{i18n>placeHolder1}"
                            tokenUpdate="onPackTokenUpdate"
                            visible="{= ${oModelControl>/Rbtn/AppPacks1}===1}"
                            valueHelpOnly="true"
                            id="AppPacks1"
                            valueHelpRequest="handlePackValueHelp"
                            tokens="{path:'oModelControl>/MultiCombo/AppPacks1'}"
                        >
                            <tokens>
                                <Token text="{oModelControl>Name}" key="{oModelControl>Id}" />
                            </tokens>
                        </MultiInput>
                    </f:fields>
                </f:FormElement>
            </f:FormContainer>

            <!-- added by deepanjali for targeted offer for applicable products: Start  -->
            <f:FormContainer>
                <f:formElements>
                    <f:FormElement class="sapUiLargeMarginBottom" label="{i18n>uploadtargetpainter}" visible="{oModelControl>/ApbleProductsTargetVisible}">
                        <f:fields>
                            <RadioButtonGroup columns="2" select="onRbChnageMain1">
                                <buttons>
                                    <RadioButton text="{i18n>formLabelProduct}" />
                                    <RadioButton text="{i18n>Pack}" />
                                </buttons>
                            </RadioButtonGroup>
                        </f:fields>
                    </f:FormElement>
                    <f:FormElement label="" visible="{oModelControl>/ApbleProductsTargetVisible}">
                        <f:fields>
                            <VBox>
                                <u:FileUploader id="idOfferFileUploaderCSV" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server" uploadComplete="onUploadComplete" />

                                <Button text="Upload File" press="onFileUploadChangeCSV" />

                                <Button type="Emphasized" text="{i18n>DownloadSample}" press="uplaodCsv" />
                            </VBox>
                        </f:fields>
                    </f:FormElement>
                </f:formElements>
            </f:FormContainer>
            <!-- added by deepanjali for targeted offer for applicable products: End -->
        </f:formContainers>
    </f:Form>
</core:FragmentDefinition>
