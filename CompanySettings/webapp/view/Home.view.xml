<mvc:View controllerName="com.knpl.pragati.CompanySettings.controller.Home" class="sapUiSizeCompact" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
height="100%"
xmlns:l="sap.ui.layout"
xmlns:core="sap.ui.core"
xmlns:u="sap.ui.unified"
xmlns:f="sap.ui.layout.form">
	
	
            <Page busyIndicatorDelay="0" busy="{local>/bBusy}" title="{i18n>appTitle}" titleAlignment="Center" >
            <content>
            <VBox visible="{=!${local>/bEdit}}">
            
            <core:Fragment
            
                fragmentName="com.knpl.pragati.CompanySettings.view.fragment.Display" type="XML"> 
            </core:Fragment></VBox>

                <VBox visible="{local>/bEdit}" >
                <core:Fragment
             
                fragmentName="com.knpl.pragati.CompanySettings.view.fragment.Change" type="XML"> 
            </core:Fragment>
                </VBox>
                    <VBox class="sapUiSmallMargin">
                    <Table id="idPdf" width="auto"  items="{path: 'MediaList/', templateShareable: false,filters : [{ path : 'ContentType', operator : 'EQ', value1 : 'application/pdf'},{ path : 'DirectoryName', operator : 'EQ', value1 : 'COMPANY_SETTINGS'}]}" noDataText="{i18n>tableNoDataText}" growing="true" growingThreshold="20" growingScrollToLoad="false">
                                        <headerToolbar>
                                            <Toolbar>
                                                <Title text="{i18n>catalogues}" />
                                                <ToolbarSpacer />
                                                <Button icon="sap-icon://edit"  press="onEditCatalogue" type="Emphasized" text="Edit" visible="{=${!local>/bEdit}}"/>
                                                <Button icon="sap-icon://add" press="onAddCatalogue" type="Emphasized" text="Add" visible="{=${local>/bEdit}}"/>
                                            </Toolbar>
                                        </headerToolbar>
                                            <columns>
                                                <Column>
                                                    <Text text="{i18n>selectLanguage}" />
                                                </Column>
                                                <!-- <Column visible="{=${local>/bEdit}}">
                                                    <Text text="{i18n>selectCatalogue}" />
                                                </Column> -->
                                                <Column visible="{!=${local>/bEdit}}">
                                                    <Text text="Media Name" />
                                                </Column>

                                                <Column width="10%">
                                                    <Text text="{i18n>Action}" />
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem>
                                                    <cells>
                                                        <VBox>
                                                        <Select
                                                            forceSelection="false"
                                                            editable="{=${local>/bEdit}}"
                                                            selectedKey="{LanguageCode}"
                                                            items="{
                                                                path: '/MasterLanguageSet',
                                                                sorter: { path: 'Id' },
                                                                templateShareable: true
                                                            }">
                                                            <core:Item key="{LanguageCode}" text="{Language}" />
                                                            </Select>
                                                        
                                                        </VBox>
                                                         <VBox visible="{!=${local>/bEdit}}">
                                                            <Text text="{MediaName}"></Text>
                                                            </VBox>

                                                        <HBox>
                                                            <!-- <Button  icon="sap-icon://edit" type="Transparent" visible="{= ${ActionViewModel>/Catalogue} !== null}"/> -->
                                                            <Button id="pdfBtn" icon="sap-icon://pdf-attachment"  type="Transparent" press="openPdf" class="sapUiTinyMarginEnd"/>
                                                            <!-- <Button icon="sap-icon://delete" press="onPressRemoveCatalogue" type="Transparent" tooltip="{i18n>Remove}" visible="{=${local>/bEdit}}" /> -->
                                                        
                                                        </HBox>
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                            </Table>
                        </VBox>
                        <VBox class="sapUiSmallMargin">
                    <Table id="idPdf2" width="auto" items="{path: 'MediaList/', templateShareable: false,filters : [{ path : 'ContentType', operator : 'EQ', value1 : 'application/pdf'},{ path : 'DirectoryName', operator : 'EQ', value1 : 'MEDICLAIM'}]}" noDataText="{i18n>tableNoDataText}" growing="true" growingThreshold="10" growingScrollToLoad="false">
                                        <headerToolbar>
                                            <Toolbar>
                                                <Title text="{i18n>mediclaim}" />
                                                <ToolbarSpacer />
                                                <Button icon="sap-icon://edit"  press="onEditMediclaim" type="Emphasized" text="Edit" visible="{=${!local>/bEdit}}"/>
                                                <Button icon="sap-icon://add" press="onAddMediclaim" type="Emphasized" text="Add" visible="{=${local>/bEdit}}"/>
                                            </Toolbar>
                                        </headerToolbar>
                                            <columns>
                                                <Column>
                                                    <Text text="{i18n>selectLanguage}" />
                                                </Column>
                                                <!-- <Column visible="{=${local>/bEdit}}">
                                                    <Text text="{i18n>selectCatalogue}" />
                                                </Column> -->
                                                <Column visible="{!=${local>/bEdit}}">
                                                    <Text text="Media Name" />
                                                </Column>

                                                <Column width="10%">
                                                    <Text text="{i18n>Action}" />
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem>
                                                    <cells>
                                                        <VBox>
                                                        <Select
                                                            forceSelection="false"
                                                            editable="{=${local>/bEdit}}"
                                                            selectedKey="{LanguageCode}"
                                                            items="{
                                                                path: '/MasterLanguageSet',
                                                                sorter: { path: 'Id' },
                                                                templateShareable: true
                                                            }">
                                                            <core:Item key="{LanguageCode}" text="{Language}" />
                                                            </Select>
                                                        
                                                        </VBox>
                                                         <VBox visible="{!=${local>/bEdit}}">
                                                            <Text text="{MediaName}"></Text>
                                                            </VBox>

                                                        <HBox>
                                                            <!-- <Button  icon="sap-icon://edit" type="Transparent" visible="{= ${ActionViewModel>/Catalogue} !== null}"/> -->
                                                            <Button id="pdfBtn2" icon="sap-icon://pdf-attachment"  type="Transparent" press="openPdf2" class="sapUiTinyMarginEnd"/>
                                                            <!-- <Button icon="sap-icon://delete" press="onPressRemoveCatalogue" type="Transparent" tooltip="{i18n>Remove}" visible="{=${local>/bEdit}}" /> -->
                                                        
                                                        </HBox>
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                            </Table>
                                         
             
                     </VBox>
            
            </content>
		</Page>
				
	
</mvc:View>
