                <Label text="{i18n>bnkStatus}" />
                <Text  text="{path:'oModelView>/AddFields/bnkStatus',formatter:'.formatter.fmtStatus'}" />
                <Label text="{i18n>kycStatus}" />
                <Text  text="{path:'oModelView>/AddFields/kycStatus',formatter:'.formatter.fmtStatus'}" />

