                    <items>
                      <Title visible="{oModelControl>/bDoc}" text="Bank details and KYC documents should be approved to redeem points." />
                        <Title visible="{oModelControl>/bPrimaryDealer}" text="Primary Dealer not there for the painter." />
                    </items>
                </VBox>
              
                <Label text="{i18n>Balpts}" />
