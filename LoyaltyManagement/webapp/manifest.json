{
    "_version": "1.12.0",
    "sap.app": {
        "id": "com.knpl.pragati.LoyaltyManagement",
        "type": "application",
        "i18n": "i18n/i18n.properties",
        "applicationVersion": {
            "version": "1.0.0"
        },
        "title": "{{appTitle}}",
        "description": "{{appDescription}}",
        "resources": "resources.json",
        "ach": "set-ach",
        "sourceTemplate": {
            "id": "html5moduletemplates.basicSAPUI5ApplicationProjectModule",
            "version": "1.40.12"
        },
        "crossNavigation": {
            "inbounds": {
                "intent1": {
                    "signature": {
                        "parameters": {},
                        "additionalParameters": "allowed"
                    },
                    "semanticObject": "Manage",
                    "action": "LTM",
                    "title": "{{appTileTitle}}",
                    "subTitle": "{{appTileSubTitle}}",
                    "icon": "sap-icon://monitor-payments"
                }
            }
        },
        "dataSources": {
            "KNPL_LM": {
                "uri": "/KNPL_PAINTER_API/api/v2/odata.svc/",
                "type": "OData",
                "settings": {
                    "localUri": "localService/metadata.xml",
                    "annotations": [ 
                        "annotation0"   ] 

                }
            },
            "annotation0": {
                "type": "ODataAnnotation",
                "uri": "annotation/annotation.xml"
        }

        }
    },
    "sap.ui": {
        "technology": "UI5",
        "icons": {
            "icon": "",
            "favIcon": "",
            "phone": "",
            "phone@2": "",
            "tablet": "",
            "tablet@2": ""
        },
        "deviceTypes": {
            "desktop": true,
            "tablet": true,
            "phone": true
        }
    },
    "sap.ui5": {
        "flexEnabled": false,
        "rootView": {
            "viewName": "com.knpl.pragati.LoyaltyManagement.view.App",
            "type": "XML",
            "async": true,
            "id": "app"
        },
        "dependencies": {
            "minUI5Version": "1.60.1",
            "libs": {
                "sap.ui.core": {},
                "sap.m": {},
                "sap.ui.layout": {},
                "sap.ushell": {}
            }
        },
        "contentDensities": {
            "compact": true,
            "cozy": true
        },
        "models": {
            "i18n": {
                "type": "sap.ui.model.resource.ResourceModel",
                "settings": {
                    "bundleName": "com.knpl.pragati.LoyaltyManagement.i18n.i18n"
                }
            },
            "": {
                "type": "sap.ui.model.odata.v2.ODataModel",
                "settings": {
                    "defaultOperationMode": "Server",
                    "defaultBindingMode": "TwoWay",
                    "defaultCountMode": "Request",
                    "useBatch": false
                },
                "dataSource": "KNPL_LM",
                "preload": true
            }
        },
        "resources": {
            "css": [
                {
                    "uri": "css/style.css"
                }
            ]
        },
        "routing": {
            "config": {
                "routerClass": "sap.m.routing.Router",
                "viewType": "XML",
                "async": true,
                "viewPath": "com.knpl.pragati.LoyaltyManagement.view",
                "controlAggregation": "pages",
                "controlId": "app"
            },
            "routes": [
                {
                    "name": "RouteLandingPage",
                    "pattern": "",
                    "target": [
                        "TargetLandingPage"
                    ]
                },
                {
                    "name": "DetailPage",
                    "pattern": "DetailPage/{Id}",
                    "target": [
                        "TargetDetailPage"
                    ]
                },
                {
                    "name": "AddLoyaltyPoint",
                    "pattern": "AddLoyaltyPoint",
                    "target": [
                        "TargetAddLoyaltyPoint"
                    ]
                }
            ],
            "targets": {
                "TargetLandingPage": {
                    "viewType": "XML",
                    "transition": "slide",
                    "viewName": "LandingPage",
                    "viewLevel": 1,
                    "viewId": "landingPage"
                },
                "TargetDetailPage": {
                    "viewType": "XML",
                    "transition": "slide",
                    "viewName": "DetailPage",
                    "viewLevel": 1,
                    "viewId": "detailPage"
                },
                "TargetAddLoyaltyPoint": {
                    "viewType": "XML",
                    "transition": "slide",
                    "viewName": "AddLoyaltyPoint",
                    "viewLevel": 1,
                    "viewId": "addLoyaltyPoint"
                }
            }
        }
    }
}