<mvc:View controllerName="com.knpl.pragati.LoyaltyManagement.controller.DetailPage" height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
    <f:DynamicPage headerExpanded="true" class="sapUiNoContentPadding">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{path:'PointTransactionType',formatter:'.formatter.requestType'} Request"/>
                </f:heading>
                <f:breadcrumbs>
                    <Breadcrumbs currentLocationText="{path:'PointTransactionType',formatter:'.formatter.requestType'} Details">
                        <Link press="onPressBreadcrumbLink" text="Rewards"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
                <f:expandedContent>
                    <Label text="Request Id :{Id}"/>
                </f:expandedContent>
                <f:snappedContent>
                    <Label text="Request Id :{Id}"/>
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <layout:HorizontalLayout allowWrapping="true">
                    <layout:VerticalLayout class="sapUiLargeMarginEnd">
                        <ObjectAttribute title="Type of {path:'PointTransactionType',formatter:'.formatter.requestType'}"/>
                        <ObjectStatus text="{path:'PointType',formatter:'.formatter.accuralType'}" />
                    </layout:VerticalLayout>

                    <!-- <layout:VerticalLayout>
                        <ObjectAttribute title="Status"/>
                        <VBox>
                        <ObjectStatus text="{path:'PainterReferralHistory/ReferralStatus',formatter:'.formatter.status'}" state="Warning" visible="{=${PainterReferralHistory} !== null }"/>
                        <ObjectStatus text="{path:'PainterTokenScanHistory/ScanStatus',formatter:'.formatter.status'}" state="Warning" visible="{=${PainterTokenScanHistory} !== null }"/>
                        </VBox>
                    </layout:VerticalLayout> -->
                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <VBox class="formContainer sapUiSmallMargin">
                <form:Form id="idDetailForm"
                    editable="false">
                    <form:layout>
                        <form:ResponsiveGridLayout
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="12"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="2"
                            singleContainerFullSize="false" />
                    </form:layout>
                    <form:formContainers>
                        <form:FormContainer >
                        
                            <form:formElements>
                                <form:FormElement label="Type of Request">
                                    <form:fields>
                                        <Text class="sapUiTinyMarginTop" text="{path:'PointTransactionType',formatter:'.formatter.requestType'}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Type of Accrual">
                                    <form:fields>
                                        <Text  class="sapUiTinyMarginTop"  text="{path:'PointType',formatter:'.formatter.accuralType'}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Request ID">
                                    <form:fields>
                                        <Text class="sapUiTinyMarginTop" text="{Id}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Point" visible="{= ${PointTransactionType} !== 'REDEEMED'}">
                                    <form:fields>
                                        <Text class="sapUiTinyMarginTop" text="{RewardPoints}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Product Details" visible="{= ${ProductDetails}!==null}">
                                    <form:fields >
                                        <Text class="sapUiTinyMarginTop" text="{ProductDetails/ProductDetails}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Offer Title" visible="{= ${Offer}!== null}">
                                    <form:fields >
                                        <Text class="sapUiTinyMarginTop" text="{Offer/Title}" />
                                    </form:fields>
                                    
                                </form:FormElement>
                                <form:FormElement label="Offer Code" visible="{= ${Offer}!== null}">
                                    <form:fields >
                                        <Text class="sapUiTinyMarginTop" text="{Offer/OfferCode}" />
                                    </form:fields>
                                    
                                </form:FormElement>
                                <form:FormElement label="Redemption Status" visible="{= ${PointTransactionType}=== 'REDEEMED'}">
                                    <form:fields >
                                        <Text class="sapUiTinyMarginTop" text="Redeemed"/>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Reward Gift" visible="{= ${PointTransactionType}=== 'REDEEMED'}">
                                    <form:fields >
                                        <Text class="sapUiTinyMarginTop" text="{= ${GiftRedemption}=== null ? 'NA' : ${GiftRedemption/RewardGiftName} }"/>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Transaction Amount" visible="{= ${PointTransactionType}=== 'REDEEMED'}">
                                    <form:fields >
                                        <Text class="sapUiTinyMarginTop" text="{= ${PaymentTransaction}=== null ? 'NA' : ${PaymentTransaction/TransactionAmount} }"/>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Redeemed Points" visible="{= ${PointTransactionType}=== 'REDEEMED'}">
                                    <form:fields >
                                        <Text class="sapUiTinyMarginTop" text="{= ${RewardPoints}=== null ? 'NA' : ${RewardPoints} }"/>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Gift Status" visible="{= ${GiftRedemption}!== null}">
                                    <form:fields >
                                    <FlexBox >
                                        <Text class="sapUiTinyMarginTop" visible="{= ${GiftRedemption}!== null}" text="{path:'GiftRedemption/TrackingStatus',formatter:'.formatter.accuralType'}"/>
                                        <!-- <Text class="sapUiTinyMarginTop" visible="{= ${PaymentTransaction}!== null}" text="{path:'PaymentTransaction/TransactionStatus',formatter:'.formatter.accuralType'}"/> -->
                                    </FlexBox>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Transaction Status" visible="{= ${PaymentTransaction}!== null}">
                                    <form:fields >
                                    <FlexBox >
                                        <!-- <Text class="sapUiTinyMarginTop" visible="{= ${GiftRedemption}!== null}" text="{path:'GiftRedemption/TrackingStatus',formatter:'.formatter.accuralType'}"/> -->
                                        <Text class="sapUiTinyMarginTop" visible="{= ${PaymentTransaction}!== null}" text="{path:'PaymentTransaction/TransactionStatus',formatter:'.formatter.accuralType'}"/>
                                    </FlexBox>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Remark" visible="{= ${PointTransactionType}=== 'REDEEMED'}">
                                    <form:fields >
                                    <FlexBox >
                                        <Text class="sapUiTinyMarginTop" visible="{= ${PaymentTransaction}!== null}" text="{path:'PaymentTransaction/TransactionMessage'}"/>
                                    </FlexBox>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Payment Transaction Id" visible="{= ${PaymentTransactionId}!== null}">
                                    <form:fields >
                                        <Text class="sapUiTinyMarginTop" text="{= ${PaymentTransactionId}=== null ? 'NA' : ${PaymentTransactionId} }"/>
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Token Code" visible="{= ${PainterTokenScanHistory}!== null}">
                                    <form:fields >
                                        <Text class="sapUiTinyMarginTop" text="{= ${PainterTokenScanHistory/TokenCode}=== null ? 'NA' : ${PainterTokenScanHistory/TokenCode} }"/>
                                    </form:fields>
                                </form:FormElement>
                                <!-- <form:FormElement label="Date">
                                    <form:fields>
                                      
                                        <Text class="sapUiTinyMarginTop"  text="{path:'CreatedAt',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/YYYY',UTC:true}}"/>
                                    </form:fields>
                                </form:FormElement> -->
                                    <form:FormElement label="{i18n>CreatedBy}">
                                    <form:fields>
                                        <!-- <Text class="sapUiTinyMarginTop" text="{path:'CreatedAt',formatter:'.formatter.dateFormatter2'}" /> -->
                                         <Text class="sapUiTinyMarginTop"  text="{path:'CreatedByDetails',formatter:'.formatter.fmtDisplayUpdatedDetails'}" /> 
                                    </form:fields>
                                </form:FormElement>
                                    <form:FormElement label="{i18n>CreatedAt}">
                                    <form:fields>
                                        <!-- <Text class="sapUiTinyMarginTop" text="{path:'CreatedAt',formatter:'.formatter.dateFormatter2'}" /> -->
                                        <Text class="sapUiTinyMarginTop"  text="{path:'CreatedAt',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/YYYY h:mm a',UTC:false}}"/>
                                    </form:fields>
                                </form:FormElement>
                                    <form:FormElement label="{i18n>LastUpdatedBy}">
                                    <form:fields>
                                        <!-- <Text class="sapUiTinyMarginTop" text="{path:'CreatedAt',formatter:'.formatter.dateFormatter2'}" /> -->
                                     <Text class="sapUiTinyMarginTop"  text="{path:'UpdatedByDetails',formatter:'.formatter.fmtDisplayUpdatedDetails'}" />                
                                    </form:fields>
                                </form:FormElement>
                                    <form:FormElement label="{i18n>LastUpdatedAt}">
                                    <form:fields>
                                        <!-- <Text class="sapUiTinyMarginTop" text="{path:'CreatedAt',formatter:'.formatter.dateFormatter2'}" /> -->
                                        <Text class="sapUiTinyMarginTop"  text="{path:'UpdatedAt',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/YYYY h:mm a',UTC:false}}"/>
                                    </form:fields>
                                </form:FormElement>
                            </form:formElements>
                        </form:FormContainer>
                        <form:FormContainer title="">
                            <form:formElements>
                                <form:FormElement label="Painter Name">
                                    <form:fields>
                                        <Text class="sapUiTinyMarginTop" text="{Painter/Name}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Membership Id">
                                    <form:fields>
                                        <Text class="sapUiTinyMarginTop" text="{Painter/MembershipCard}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Mobile Number">
                                    <form:fields>
                                        <Text class="sapUiTinyMarginTop" text="{Painter/Mobile}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Zone">
                                    <form:fields>
                                        <Text class="sapUiTinyMarginTop" text="{Painter/ZoneId}" />
                                    </form:fields>
                                 </form:FormElement>
                                 <form:FormElement label="Division">
                                    <form:fields>
                                        <Text class="sapUiTinyMarginTop" text="{Painter/DivisionId}" />
                                    </form:fields>
                                 </form:FormElement>
                                 <form:FormElement label="Depot">
                                    <form:fields>
                                        <Text class="sapUiTinyMarginTop" text="{Painter/Depot/Depot} {Painter/DepotId}" />
                                    </form:fields>
                                 </form:FormElement>
                                
                            </form:formElements>
                        </form:FormContainer>
                    </form:formContainers>
                </form:Form>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
