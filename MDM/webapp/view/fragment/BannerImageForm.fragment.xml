<core:FragmentDefinition xmlns:unified="sap.ui.unified"
    xmlns:upload="sap.m.upload"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <VBox id="idVbx" width="100%">
        <f:SimpleForm class="addForm" id="SimpleFormChange480_12120Dual" editable="true" layout="ResponsiveGridLayout" title="{= ${oModelControl>/mode} === 'Add' ? ${i18n>TtlAddBImage} : ${i18n>TtlEditBImage} }" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
            <f:content>
                <core:Title text="{i18n>BannerImageDetails}" />
                <Label text="{i18n>colTitle}" />
                <Input required="true" value="{path:'oModelView>/Title',type:'sap.ui.model.type.String',constraints:{minLength:1}}" />

                <Label text="{i18n>uploadBannerImage}" required="true"/>
                <VBox>
                    <items>
                        <unified:FileUploader  change="onBannerImageFileChange" id="idImageUploader" width="100%" tooltip="{i18n>fileUploaderTrainingtip}" typeMissmatch="handleTypeMissmatch" fileType="png,jpg,jpeg" maximumFileSize="2.1" fileSizeExceed="onFileSizeExceed" useMultipart="false" sendXHR="true" fileAllowed="onUpload"/>
                          <Text text="{i18n>FileUploadMessage}"/>
                    </items>
                </VBox>
                
               
              
                <Label text="{i18n>ViewExistingImgae}" visible="{= ${oModelControl>/mode}==='Edit'}"/>
                <Link   press="onImageView" visible="{= ${oModelControl>/mode}==='Edit'}" text="View Image" />
                
                <core:Title text=" " />
                <Label text="{i18n>colStartTime}" />
                <!-- <DatePicker valueStateText="Enter a valid date" minDate="{oModelControl>/currDate}" dateValue="{path:'oModelView>/StartTime'}" value="{path:'oModelControl>/StartTime', type :'sap.ui.model.type.Date',formatOptions:{source: {pattern: 'dd/MM/yyyy'},pattern:'dd/MM/yyyy' },constraints:{minimum:'01/01/2021'}  }" placeholder="DD/MM/yyyy" required="true" /> -->
                <DatePicker change=".onStartDateChange" valueStateText="Enter a valid date" dateValue="{path:'oModelView>/StartTime'}" value="{path:'oModelControl>/StartTime', type :'sap.ui.model.type.Date',formatOptions:{source: {pattern: 'dd/MM/yyyy'},pattern:'dd/MM/yyyy',strictParsing:true},constraints:{minimum:'01/01/2021'}  }"  placeholder="DD/MM/yyyy" required="true"/>
                <Label text="{i18n>colEndTime}"/>
                <!--
                <DatePicker valueStateText="Enter a valid date" minDate="{oModelControl>/currDate}" dateValue="{path:'oModelView>/EndTime'}" value="{path:'oModelControl>/EndTime', type :'sap.ui.model.type.Date',formatOptions:{source: {pattern: 'dd/MM/yyyy'},pattern:'dd/MM/yyyy' },constraints:{minimum:'01/01/2021'}  }" placeholder="DD/MM/yyyy" required="true" /> -->
                <DatePicker change=".onEndDateChange" valueStateText="Enter a valid date" dateValue="{path:'oModelView>/EndTime'}" value="{path:'oModelControl>/EndTime', type :'sap.ui.model.type.Date',formatOptions:{source: {pattern: 'dd/MM/yyyy'},pattern:'dd/MM/yyyy' } }" placeholder="DD/MM/yyyy"/>
            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>
