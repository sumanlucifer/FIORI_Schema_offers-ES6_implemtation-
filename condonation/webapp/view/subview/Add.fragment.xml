                      <core:Item key="{Id}" text="{Classification}" />
                    </items>
                </ComboBox> -->

              
                <Label text="{i18n>LblProduct}" />
                <ComboBox id="Products" enabled="{= ${oModelView>/AddFields/CategoryId}.length>0}" change="onProductChange" required="true" items="{path:'/MasterProductSet' }" selectedKey="{path:'oModelView>/AddFields/ProductId',type  : 'sap.ui.model.type.String',  constraints:{minLength:1,maxLength:10} }">
                    <items>
                         <core:Item key="{Id}" text="{ProductName}" />
                    </items>
                </ComboBox>
                <Label text="{i18n>Pack}" />
                <ComboBox id="Packs" enabled="{= ${oModelView>/AddFields/ProductId}.length>0 }" change="onPackChange" required="true" items="{path:'/MasterRepProductSkuSet' }" selectedKey="{path:'oModelView>/PainterComplainProducts/0/ProductSKUCode',type  : 'sap.ui.model.type.String',  constraints:{minLength:1,maxLength:10} }">
                    <items>
                         <core:Item key="{SkuCode}" text="{Description}" />
                    </items>
                </ComboBox> 

                <Label text="{i18n>LblQuantity}" />
                <Select change="onPointsChange" selectedKey="{path:'oModelView>/PainterComplainProducts/0/ProductQuantity',type:'.cmbxDtype2'}" width="10%" items="{oModelControl>/aQuantity}" >
                 <core:Item key="{oModelControl>key}" text="{oModelControl>value}" ></core:Item>
                </Select>    
               
               <Label text="{i18n>LblTotalPoints}" />
               <Text text="{= ${oModelView>/PainterComplainProducts/0/Points}*${oModelView>/PainterComplainProducts/0/ProductQuantity} }"  />
                <core:Title text="{i18n>LblPainterDetails}" />
                <Label text="{i18n>PrimaryMobileNo}" />
                  <Input required="true" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="onValueHelpRequest" value="{path:'oModelView>/AddFields/Mobile', type : 'sap.ui.model.type.String', constraints:{ minLength:1 } }" />
                <Label text="{i18n>PainterName}" />
                <Text text="{oModelView>/AddFields/Name}" />
                <Label text="{i18n>MembershipId}" />
                <Text  text="{oModelView>/AddFields/MembershipCard}" />
                <Label text="{i18n>Zone}" />
                <Text  text="{oModelView>/AddFields/ZoneId}" />
                <Label text="{i18n>Division}" />
                <Text  text="{oModelView>/AddFields/DivisionId}" />
                <Label text="{i18n>Depot}" />
                <Text  text="{oModelView>/AddFields/Depot}" />
                 <Label text="{i18n>PrimaryDealer}" />
                <Text  text="{oModelView>/AddFields/PDealer}" />
                <Label text="{i18n>SecondryDealers}" />
                <MultiInput editable="false"   tokens="{path:'oModelView>/AddFields/SecDealers'}">
                            <tokens>
                                <Token text="{oModelView>DealerName}"/>
                            </tokens>
                        </MultiInput>
             
                <Label text="{i18n>Remark}"/>
                <TextArea maxLength="250" required="true" value="{path:'oModelView>/Remark',type:'sap.ui.model.type.String',constraints:{minLength:1,maxLength:250}}" />

