<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
        <f:SimpleForm id="FormCondonation" title="{i18n>AddComplaint}"  editable="true" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
            <f:content>
                <core:Title text="{i18n>TtlProductDetails}" />


                <Label text="{i18n>LblCategory}" />
                <ComboBox selectionChange="onCategoryChange" required="true" items="{path:'/MasterProductCategorySet'  }" selectedKey="{path:'oModelView>/AddFields/CategoryId',type :'sap.ui.model.type.String', constraints:{minLength:1,maxLength:10} }">
                    <items>
                       <core:Item key="{Id}" text="{Category}" />
                    </items>
                </ComboBox>

                <!-- <Label text="{i18n>LblClassification}" />
                <ComboBox  selectionChange="onClassificationChange" required="true" items="{path:'/MasterProductClassificationSet' }" selectedKey="{path:'oModelView>/AddFields/ClassId',type  : 'sap.ui.model.type.String',  constraints:{minLength:1,maxLength:10} }">
