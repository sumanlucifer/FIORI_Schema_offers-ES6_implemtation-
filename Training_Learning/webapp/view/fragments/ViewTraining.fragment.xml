<core:FragmentDefinition xmlns:f2="sap.f" xmlns:upload="sap.m.upload" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox id="idVbxV" width="100%">
        <f:SimpleForm id="ViewTrainingDetails" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
            <f:content>
                <core:Title text="{i18n>TrainingDetails}"/>

                <Label text="{i18n>colTrainingMode}"/>
                <Text text="{oModelView>/TrainingDetails/TrainingType/TrainingType}"/>

                <Label text="{i18n>colTrainingType}"/>
                <Text text="{oModelView>/TrainingDetails/TrainingSubTypeDetails/TrainingSubType}"/>

                <Label text="{i18n>colTitle}"/>
                <Text text="{oModelView>/TrainingDetails/Title}"/>

                <Label text="{i18n>colTrainingDescription}"/>
                <Text text="{oModelView>/TrainingDetails/Description}"/>

                <Label text="{i18n>colLink}"/>
                <Text text="{oModelView>/TrainingDetails/Url}"/>

                <Label text="{i18n>colStartDateTime}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>
                <Text text="{oModelView>/TrainingDetails/ViewStartDate}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>

                <Label text="{i18n>colEndDateTime}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>
                <Text text="{oModelView>/TrainingDetails/ViewEndDate}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>

                <Label text="{i18n>colDuration}" visible="{= ${appView>/trainingType} === 'VIDEO'}"/>
				<Text text="{oModelView>/TrainingDetails/Duration}" visible="{= ${appView>/trainingType} === 'VIDEO'}"/>

                <Label text="{i18n>colRewardPoints}"/>
                <Text text="{oModelView>/TrainingDetails/RewardPoints}"/>

                <Label text="Thumbnail Image" visible="{= ${appView>/trainingType} !== 'OFFLINE'}"/>
                <VBox class="sapUiTinyMarginBottom">
                    <Button id="imageBtn" icon="sap-icon://attachment-photo" visible="{= ${appView>/trainingType} !== 'OFFLINE'}" press="onImageView" text="View Image" class="sapUiTinyMargin increaseFont"/>
                </VBox>

                 <!-- <Label text="{i18n>CreatedBy}" />
                <Text text="{path:'oModelView>/TrainingDetails/Creator',formatter:'.formatter.fmtDisplayUpdatedDetails'}" />
                <Label text="{i18n>CreatedAt}" />
                <Text text="{path:'oModelView>/TrainingDetails/CreatedAt',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/yyyy h:mm a'}}"/>
                 <Label text="{i18n>LastUpdatedBy}" />
                  <Text text="{path:'oModelView>/TrainingDetails/UpdatedByDetails',formatter:'.formatter.fmtDisplayUpdatedDetails'}" />
                <Label text="{i18n>LastUpdatedAt}" /> -->
                <Text text="{path:'oModelView>/TrainingDetails/UpdatedAt',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/yyyy h:mm a'}}"/>
                <Label text="{i18n>Expertise}"/>

            <core:Title text="{= ${appView>/trainingType} !== 'OFFLINE' ? 'Target Group' : '' }"/>

                <RadioButtonGroup id="rbg1" columns="3" visible="{= ${appView>/trainingType} !== 'OFFLINE'}" select="onRadioBtnChange">
                    <RadioButton id="RB1" text="All Painters" selected="{= ${oModelView>/TrainingDetails/TrainingFilterType} === 'ALL'}" editable="false"/>
                    <RadioButton id="RB2" text="Market Specific" selected="{= ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}" editable="false"/>
                    <RadioButton id="RB3" text="Painter Specific" selected="{= ${oModelView>/TrainingDetails/TrainingFilterType} === 'PAINTER'}" editable="false"/>
                </RadioButtonGroup>

                <!-- <Label text="{i18n>colPainter}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'PAINTER'}"/>
                <MultiComboBox selectedKeys="{oModelView>/displayPainters}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'PAINTER'}" editable="false" items="{ path : '/PainterSet'}">
					<core:Item key="{Id}" text="{Name} ( {Id} )"/>
				</MultiComboBox> -->
                <Label text="{i18n>colPainter}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'PAINTER'}"/>
                <MultiInput visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'PAINTER'}" editable="false" tokens="{oModelView>/TrainingDetails/TrainingPainters}" valueHelpRequest="onValueHelpRequestedPainter">
                    <tokens>
                        <Token editable="false" text="{oModelView>Name}" key="{oModelView>PainterId}"/>
                    </tokens>
                </MultiInput>



                <Label text="{i18n>colZone}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}"/>
                <MultiComboBox selectedKeys="{oModelView>/TrainingDetails/TrainingZone}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}" editable="false" items="{ path : '/MasterZoneSet'}">
					<core:Item key="{Id}" text="{Id}"/>
				</MultiComboBox>

                <Label text="{i18n>colDivision}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}"/>
                <MultiComboBox selectedKeys="{oModelView>/TrainingDetails/TrainingDivision}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}" editable="false" items="{ path : '/MasterDivisionSet'}">
					<core:Item key="{Id}" text="{Id}"/>
				</MultiComboBox>

                <Label text="{i18n>colDepot}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}"/>
                <!-- <MultiComboBox selectedKeys="{oModelView>/displayDepots}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}" editable="false" items="{ path : '/MasterDepotSet'}">
					<core:Item key="{Id}" text="{Depot} ( {Id} )"/>
				</MultiComboBox> -->
                <MultiInput visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}" editable="false" tokens="{oModelView>/TrainingDetails/TrainingDepot}" >
	                <tokens>
                        <Token editable="false" text="{oModelView>DepotId}" key="{oModelView>DepotId}"/>
                    </tokens>
	            </MultiInput>

                <Label text="{i18n>colPainterType}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}"/>
                <MultiComboBox selectedKeys="{oModelView>/TrainingDetails/TrainingPainterTypeDetails}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}" editable="false" items="{path:'/MasterPainterTypeSet', filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ] }">
					<core:Item key="{Id}" text="{PainterType}"/>
				</MultiComboBox>

                <Label text="{i18n>colPainterArcheType}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}"/>
                <MultiComboBox selectedKeys="{oModelView>/TrainingDetails/TrainingPainterArcheTypeDetails}" visible="{= ${appView>/trainingType} !== 'OFFLINE' &amp;&amp; ${oModelView>/TrainingDetails/TrainingFilterType} === 'GROUP'}" editable="false" items="{path:'/MasterArcheTypeSet', filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ] }">
					<core:Item key="{Id}" text="{ArcheType}"/>
				</MultiComboBox>

            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>